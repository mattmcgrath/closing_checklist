<%= nested_form_for(@deal) do |f| %>
  <% if @deal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@deal.errors.count, "error") %> prohibited this deal from being saved:</h2>

      <ul>
      <% @deal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  

	<%= f.fields_for :phases do |p| %>
		<p>
		<%= p.label :name, "Phase:" %>
		<%= p.text_field :name %>
		<%= p.link_to_remove "Remove this phase"%>
		</p>
	<% end %>
	
	<p>
		<%=f.link_to_add "Add a phase", :phases %>
	</p>
	
	<div class="actions">
    <%= f.submit %>
  </div>
	
<% end %>
