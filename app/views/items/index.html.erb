<h1>Listing items</h1>

<table>
  <tr>
    <th>Phase</th>
    <th>Name</th>
    <th>Due</th>
    <th>Done</th>
    <th>Owner</th>
    <th>Party</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.phase_id %></td>
    <td><%= item.name %></td>
    <td><%= item.due %></td>
    <td><%= item.done %></td>
    <td><%= item.owner_id %></td>
    <td><%= item.party_id %></td>
    <td><%= item.notes %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

